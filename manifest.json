{
  "manifest_version": 2,

  "name": "FCB Ticket Reloader ",
  "description": "This extension reloads the FC Bayern Tickets Site and notify if there are some tickets available",
  "version": "0.1",
  "background": {
    "scripts": [
      "background.js"
      ]
  },
  "content_scripts": [
    {
      "matches": ["https://tickets.fcbayern.de/*"],
      "js": ["content_script.js"]
    }
  ],
  "page_action": {
    "default_icon": "icon-19.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "declarativeContent",
    "activeTab",
    "tabs",
    "https://tickets.fcbayern.de/*"
  ]
}
